@using Entities
@model IEnumerable<Topic>
@{
var columnSizes = "col-sm-6 col-md-4 col-lg-3 pr-2 pl-2 pb-3 card-col";
}

<div id="topicCards" class="row" style="margin: 0 -.5rem">
    @foreach(var topic in Model)
    {
    <div class="@columnSizes">
        <a asp-page="/Topics/@(topic.IsLeaf ? "Help" : "Explore" )" asp-route-id="@topic.Id">
            <partial name="Topics/_Card" for="@topic" />
        </a>
    </div>
    }
    <div class="@columnSizes">
        <partial name="Topics/_SomethingElse" for="First().ParentId" />
    </div>
</div>
